<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pattimura">

    <ImageView
        android:id="@+id/imagePattimura"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pattimura"/>

    <TextView
        android:id="@+id/tvNama4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imagePattimura"
        android:text="Kapten Pattimura"
        android:textSize="25sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/tvNama4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#212B32"
        android:backgroundTint="#212B32"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/tvDetail4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="10sp"
            android:layout_below="@id/tvNama2"
            android:text="Thomas Matulessy, atau yang lebih dikenal sebagai Kapten Pattimura, adalah pahlawan nasional dari Maluku yang memimpin perlawanan rakyat melawan penjajahan Belanda pada tahun 1817. Dengan keberanian dan strategi militernya, Pattimura berhasil mempersatukan rakyat Maluku untuk melawan penindasan. Meski akhirnya gugur di tangan penjajah, perjuangannya meninggalkan warisan semangat pantang menyerah bagi generasi penerus. Ia menjadi simbol perlawanan rakyat Maluku dalam mempertahankan martabat dan tanah air mereka."
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>