<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sudirman">

    <ImageView
        android:id="@+id/imageSudirman"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sudirman"/>

    <TextView
        android:id="@+id/tvNama3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imageSudirman"
        android:text="Jenderal Sudirman"
        android:textSize="25sp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/tvNama3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#212B32"
        android:backgroundTint="#212B32"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/tvDetail3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="10sp"
            android:layout_below="@id/tvNama2"
            android:text="Jenderal Sudirman adalah tokoh militer yang menjadi simbol keberanian dan pengorbanan dalam mempertahankan kemerdekaan Indonesia. Meski dalam kondisi kesehatan yang buruk akibat penyakit paru-paru, ia tetap memimpin perang gerilya melawan Belanda dalam Agresi Militer. Dengan semangat juang yang tinggi dan strategi yang brilian, ia mampu menunjukkan bahwa kemerdekaan harus dipertahankan dengan segala daya upaya. Namanya kini dikenang sebagai salah satu pahlawan besar dalam sejarah perjuangan bangsa."
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>